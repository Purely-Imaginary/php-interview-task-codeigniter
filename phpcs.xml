<?xml version="1.0"?>
<ruleset name="BlueBinary Coding Standard">
    <description>BlueBinary Coding Standard based on PSR-12</description>

    <!-- Display progress -->
    <arg value="p"/>
    <!-- Use colors in output -->
    <arg name="colors"/>
    <!-- Show sniff codes in all reports -->
    <arg value="s"/>

    <!-- Use PSR-12 as the base standard -->
    <rule ref="PSR12"/>

    <!-- Paths to check -->
    <file>app</file>
    <file>tests</file>

    <!-- Exclude vendor directory -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <!-- Exclude system files -->
    <exclude-pattern>*/system/*</exclude-pattern>
    <!-- Exclude writable directory -->
    <exclude-pattern>*/writable/*</exclude-pattern>
    <!-- Exclude public directory except for index.php -->
    <exclude-pattern>*/public/*</exclude-pattern>
    <file>public/index.php</file>

    <!-- Exclude migration files -->
    <exclude-pattern>*/Database/Migrations/*</exclude-pattern>
    <!-- Exclude seed files -->
    <exclude-pattern>*/Database/Seeds/*</exclude-pattern>

    <!-- Line length -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>

    <!-- PHP compatibility -->
    <config name="php_version" value="80100"/>
</ruleset>